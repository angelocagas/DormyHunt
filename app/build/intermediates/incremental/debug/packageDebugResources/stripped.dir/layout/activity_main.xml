<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_lightmode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/btnAddImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/txtviewdormify"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:srcCompat="@drawable/logo_no_bg" />

    <TextView
        android:id="@+id/txtviewchena2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind"
        android:text="Your space, our trace."
        android:textColor="@color/find_clr"
        android:textSize="16sp"
        android:layout_marginBottom="-25dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtviewdormify"
        app:layout_constraintStart_toStartOf="@+id/txtviewdormify" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/poppins"
        android:text="Welcome to"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/dormify_clr"
        android:textSize="20sp"
        android:textStyle=""
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/txtviewdormify"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtviewdormify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/dormify_clr"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.8dp"
        android:layout_height="125dp"
        android:layout_marginEnd="11dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toStartOf="@+id/txtviewdormify"
        app:layout_constraintTop_toTopOf="@+id/btnAddImage" />

    <Button
        android:id="@+id/btngettingstarted1"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:background="@drawable/bg_btn_bck_light"
        android:fontFamily="@font/hind"
        android:onClick="goToSignInPage"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddImage"
        app:layout_constraintVertical_bias="0.504" />

</androidx.constraintlayout.widget.ConstraintLayout>