<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tvlistamountdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="2,923"
        android:maxLength="5"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/tvlistdatedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/poppins_bold"
        android:maxLength="12"
        android:text="Nov. 12 2013"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvlistreferencedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="01231231234"
        android:maxLength="13"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="249dp" />

    <TextView
        android:id="@+id/tvlistapprovedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Paid"
        android:layout_marginStart="335dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/tvlistamountdata"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_height="0.8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>