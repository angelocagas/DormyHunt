<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#6A367A"
                android:endColor="#3A3365"
                android:angle="270" />

            <stroke
                android:width="2dp"
                android:color="@color/light_gray" />

            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape

            android:shape="oval">
            <gradient
                android:endColor="@color/Signup_btn"
                android:startColor="@color/occupied_error"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#86D4D4D4" />

            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape

            android:shape="oval">
            <gradient
                android:endColor="#8B46A0"
                android:startColor="#453D78"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#86D4D4D4" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>