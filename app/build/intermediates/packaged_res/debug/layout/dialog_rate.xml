<!-- res/layout/dialog_rate.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate your dormitory experience from 1 (lowest) to 5 (highest) stars."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="#FFBF00"
        android:outlineSpotShadowColor="#FFBF00"
        android:numStars="5"
        android:progressTint="#FFBF00"
        android:stepSize="1.0"
        android:rating="0.0"/>

</LinearLayout>
