<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/cardViewImage"
       android:paddingEnd="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_chat_message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_msg_back"
            android:padding="20dp"
            android:text="This is opponent message"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
android:layout_alignBottom="@id/right_chat_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:elevation="1dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivTopProfilePictureRight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/person_icon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvtimestampright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_chat_layout"
        android:layout_alignEnd="@+id/right_chat_layout"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        android:text="12:59 am"
        android:textColor="@color/black"
        android:textSize="10dp" />

</RelativeLayout>